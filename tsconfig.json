{
  "compilerOptions": {
    "module": "commonJs",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowUnusedLabels": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "lib": [
      "es2017"
    ],
  },
  "include": [
    "lib",
    "test"
  ]
}